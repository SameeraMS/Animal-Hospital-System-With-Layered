<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="800.0" prefWidth="1440.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.ahms.controller.SigninFormController">
   <children>
      <ImageView fitHeight="943.0" fitWidth="1442.0" layoutX="-1.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../asserts/images/signin.jpg" />
         </image>
      </ImageView>
      <JFXTextField fx:id="txtusername" layoutX="881.0" layoutY="326.0" onAction="#usernameOnAction" prefHeight="48.0" prefWidth="470.0" promptText="   Username" unFocusColor="#4d4d4d">
         <font>
            <Font size="22.0" />
         </font></JFXTextField>
      <JFXPasswordField fx:id="txtpassword" layoutX="881.0" layoutY="455.0" onAction="#passOnAction" prefHeight="48.0" prefWidth="470.0" promptText="   Password">
         <font>
            <Font size="22.0" />
         </font>
      </JFXPasswordField>
      <JFXButton fx:id="btnsignin" buttonType="RAISED" layoutX="869.0" layoutY="567.0" onAction="#signinOnAction" prefHeight="56.0" prefWidth="496.0" styleClass="login-page-btn" stylesheets="@../styles/signin.css" text="Sign in" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="26.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
      <Label layoutX="1210.0" layoutY="516.0" onMouseClicked="#forgotPassOnAction" text="Forgot Password..?" textFill="WHITE" underline="true">
         <font>
            <Font size="19.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Label>
   </children>
</AnchorPane>
